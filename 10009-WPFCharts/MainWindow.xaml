<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ChartTest"
        x:Class="ChartTest.MainWindow"
        Title="MainWindow"
        Height="600"
        Width="800">
    <Grid x:Name="myGrid">
        <Border BorderBrush="Black"
                BorderThickness="2"
                Grid.Row="0"
                Grid.Column="0">
            <local:ColumnChart x:Name="myChart" Height="480"
                               Width="640" />
        </Border>
    </Grid>
</Window>
